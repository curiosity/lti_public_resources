{{#link-to targetRoute item classNames="pull-left"}}
  <img {{bindAttr src=item.thumbnailUrl}} class="media-object thumbnail thumbnail_med_wide">
{{/link-to}}
<div class="video data media-body">
  <h2 class="title clearfix">
    {{#link-to targetRoute item classNames="pull-left"}}{{item.title}}{{/link-to}}
  </h2>
  <p class="meta">
    from <span class="username">{{item.username}}</span> /
    Added <time>{{item.createdDate}}</time>
  </p>
  <p class="description">{{item.shortDescription}}</p>
  <div class="return-types text-right">
    {{#each returnType in item.returnableReturnTypes}}
      {{view "a-embed-item" returnTypeBinding="returnType" itemBinding="item" 
        title=returnType.displayReturnType showTooltip="true" data-placement="left"}}
    {{/each}}
  </div>
</div>
